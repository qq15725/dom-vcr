{
  "name": "dom-vcr",
  "type": "module",
  "version": "0.2.7",
  "packageManager": "pnpm@7.9.0",
  "description": "Generates an video or GIF from a DOM node using HTML5 canvas and SVG",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/dom-vcr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/dom-vcr.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/dom-vcr/issues"
  },
  "keywords": [
    "dom",
    "image",
    "raster",
    "render",
    "html",
    "canvas",
    "svg",
    "webm",
    "gif",
    "video",
    "vcr"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "types/index.d.ts",
  "browser": "dist/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "./types/*",
        "./types/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "lint": "eslint src",
    "test": "vitest --no-threads --no-isolate",
    "build": "vite build && tsc --project tsconfig.build.json",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag"
  },
  "devDependencies": {
    "@qq15725/eslint-config": "^1.1.0",
    "@types/dom-webcodecs": "^0.1.5",
    "@types/node": "^18.14.0",
    "bumpp": "^8.2.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.34.0",
    "modern-gif": "^0.0.7",
    "mp4box": "^0.5.2",
    "typescript": "^4.9.5",
    "vite": "^4.1.2",
    "vitest": "^0.28.5"
  },
  "dependencies": {
    "modern-screenshot": "^4.3.5"
  }
}
